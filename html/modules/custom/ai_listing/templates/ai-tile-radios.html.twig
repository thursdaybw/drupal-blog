<div class="ai-pill-group">
  {% for key, label in element['#options'] %}
    <label class="ai-pill">
      <input
        type="radio"
        name="{{ element['#name'] }}"
        value="{{ key }}"
        {% if key == element['#value'] %}checked{% endif %}
      >
      <span>{{ label }}</span>
    </label>
  {% endfor %}
</div>
